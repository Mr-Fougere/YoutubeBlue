{
  "manifest_version": 3,
  "name": "YouSkip",
  "version": "0.1.4",
  "author": "Mr-Fougere",
  "description": "Skip Ads automatically",
  "permissions": ["storage"],
  "background": {
    "scripts": ["scripts/background.js"]
  },
  "icons": {
    "48": "assets/icons/logo48.png",
    "64": "assets/icons/logo64.png",
    "96": "assets/icons/logo96.png",
    "192": "assets/icons/logo192.png"
  },
  "action": {
    "default_icon": {
      "48": "assets/icons/logo48.png",
      "64": "assets/icons/logo64.png",
      "96": "assets/icons/logo96.png",
      "192": "assets/icons/logo192.png"
    },
    "default_title": "YouSkip",
    "default_popup": "popup/popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch?*"],
      "js": ["scripts/adSkipper.js"]
    }
  ]
}
